            <Label x:Name="TempCLabel" Content="Temperature (C):" HorizontalAlignment="Left" Margin="10,133,0,0" VerticalAlignment="Top"/>
            <Label x:Name="HumidityLabel" Content="Relative Humidity:" HorizontalAlignment="Left" Margin="10,157,0,0" VerticalAlignment="Top"/>
            <Label x:Name="WindSpeedLabel" Content="Wind Speed:" HorizontalAlignment="Left" Margin="240,110,0,0" VerticalAlignment="Top"/>
            <Label x:Name="WindDirectionLabel" Content="Wind Direction:" HorizontalAlignment="Left" Margin="239,133,0,0" VerticalAlignment="Top"/>
            <Label x:Name="UVLabel" Content="UV Index:" HorizontalAlignment="Left" Margin="240,157,0,0" VerticalAlignment="Top"/>
        </Grid>


    </Grid>
</Window>
