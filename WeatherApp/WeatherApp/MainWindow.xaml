            <TextBlock x:Name="TempFBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Margin="126,113,0,0" Height="22" Width="88"/>
            <TextBlock x:Name="TempCBlock" HorizontalAlignment="Left" Margin="115,138,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Height="21" Width="88"/>
            <TextBlock x:Name="HumidityBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Margin="115,164,0,0" Height="23" Width="99"/>
            <TextBlock x:Name="WindmphBlock" HorizontalAlignment="Left" Margin="336,114,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="81" Height="22"/>
            <TextBlock x:Name="WindDirectionBlock" HorizontalAlignment="Left" Margin="335,141,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="154" Height="21"/>
            <TextBlock x:Name="UVIndexBox" HorizontalAlignment="Left" Margin="335,162,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="82" Height="23"/>
            <Label x:Name="LocationLabel" Content="Location:" HorizontalAlignment="Left" Margin="115,12,0,0" VerticalAlignment="Top"/>
            <Label x:Name="LatiLongLabel" Content="Latitude/Longitude:" HorizontalAlignment="Left" Margin="115,38,0,0" VerticalAlignment="Top"/>
            <Label x:Name="WeatherLabel" Content="The weather is:" HorizontalAlignment="Left" Margin="115,64,0,0" VerticalAlignment="Top"/>
