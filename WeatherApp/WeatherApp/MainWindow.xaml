            <TextBlock x:Name="CityBlock" HorizontalAlignment="Left" Margin="244,11,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Height="25" Width="113"/>
            <TextBlock x:Name="LatiLongBlock" HorizontalAlignment="Left" Margin="244,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="106"/>
